. /usr/libexec/nethserver/api/lib/helper_functions

data=$(cat /dev/stdin)
action=$(echo $data | jq -r '.action')

case $action in

    "hotsync")
        unit=hotsync

        # Skip double execution
        systemctl is-active $unit >/dev/null
        if [ $? -eq 0 ]; then
            exit 0
        else
            systemctl reset-failed $unit >/dev/null
        fi

        systemd-run --setenv=HOME=/root --unit=$unit hotsync
        ;;

    "hotsync-slave")
        unit=hotsync-slave

        # Skip double execution
        systemctl is-active $unit >/dev/null
        if [ $? -eq 0 ]; then
            exit 0
        else
            systemctl reset-failed $unit >/dev/null
        fi

        systemd-run --setenv=HOME=/root --unit=$unit hotsync-slave
        ;;

    "hotsync-promote")
        unit=hotsync-promote

        # Skip double execution
        systemctl is-active $unit >/dev/null
        if [ $? -eq 0 ]; then
            exit 0
        else
            systemctl reset-failed $unit >/dev/null
        fi

        systemd-run --setenv=HOME=/root --unit=$unit hotsync-promote
        ;;
esac
